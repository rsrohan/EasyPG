<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="20dp"
    tools:context=".TenantMainActivity">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/profiletenant"
        android:src="@mipmap/defaultlogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:id="@+id/profilename"
        android:layout_below="@+id/profiletenant"
        android:layout_centerHorizontal="true"
        android:text="NAME "
        android:textSize="25dp"
        android:padding="10dp"
        android:textStyle="bold"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:id="@+id/profilephone"
        android:layout_below="@+id/profilename"
        android:layout_centerHorizontal="true"
        android:text="PHONE"
        android:textSize="25dp"
        android:padding="10dp"
        android:textStyle="bold"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:id="@+id/profileroom"
        android:layout_below="@+id/profilephone"
        android:layout_centerHorizontal="true"
        android:text="ROOM "
        android:textSize="15dp"
        android:padding="10dp"
        android:textStyle="bold"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:id="@+id/profilerent"
        android:layout_below="@+id/profileroom"
        android:layout_centerHorizontal="true"
        android:text="RENT"
        android:textSize="20dp"
        android:padding="10dp"
        android:textStyle="bold"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:text="Edit profile"
        android:layout_above="@+id/logouttenant"
        android:layout_marginBottom="25dp"
        android:id="@+id/editprofile"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:text="logout"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:id="@+id/logouttenant"/>

</RelativeLayout>